---
import Layout from "../layouts/Layout.astro";
import { ThemeToggle } from "../components/ThemeToggle";
import { Separator } from "../components/ui/separator";
import { Button } from "../components/ui/button";
import { GitHubLogoIcon, TwitterLogoIcon } from "@radix-ui/react-icons";
import type { ClassValue } from "clsx";
import { cn } from "../lib/utils";

interface Props {
    title?: string;
    description?: string;
    className?: ClassValue;
}

const { title, description, className } = Astro.props;
---

<Layout title={title} description={description}>
    <div
        class="flex flex-col items-center justify-center lg:mx-auto lg:max-w-screen-xl"
    >
        <div class="mt-2 w-full">
            <div class="mx-4 flex flex-col justify-between sm:flex-row">
                <nav class="space-x-4">
                    <a href="/">
                        <Button variant="ghost">Home</Button>
                    </a>
                    <a href="/projects">
                        <Button variant="ghost">Projects</Button>
                    </a>
                    <a href="/referrals">
                        <Button variant="ghost">Referrals</Button>
                    </a>
                </nav>
                <div class="mt-4 flex flex-row space-x-4 sm:mt-0">
                    <ThemeToggle
                        iconClass="size-4"
                        buttonVaiant="ghost"
                        client:load
                    />
                    <div class="space-x-1">
                        <a
                            href="https://github.com/SerenModz21"
                            target="_blank"
                        >
                            <Button variant="ghost">
                                <GitHubLogoIcon className="size-4" />
                                <span class="sr-only">GitHub</span>
                            </Button>
                        </a>
                        <a
                            href="https://twitter.com/SerenModz21"
                            target="_blank"
                        >
                            <Button variant="ghost">
                                <TwitterLogoIcon className="size-4" />
                                <span class="sr-only">Twitter</span>
                            </Button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <Separator className="my-2" />

        <main class={cn("mx-4 flex flex-col", className)}>
            <slot />
        </main>
    </div>
</Layout>
